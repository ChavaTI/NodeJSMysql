<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  </head>
  <body>
      <main class="container">
        <header>

        </header>
        <nav class="navbar navbar-dark bg-dark">
          <a href="#" class="navbar-brand mx-auto">News</a>
        </nav>
        <article class="row">
          <div class="col-md-6 mt-4 text-center">
            <table class = "table table-striped" >
              <thead>
                <th>ID</th>
                <th>Title</th>
                <th>News</th>
              </thead>
              <tbody>
                <% for(var i=0; i < news.length; i++){ %>
                  <tr>
                    <td><%= news[i].id_news%></td>
                    <td><%= news[i].title%></td>
                    <td><%= news[i].news%></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6 mt-4 card">
            <form class="" action="/news" method="post" class="card-body">
              <h3 class="card-title">Add News</h3>
              <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title">
              </div>
              <div class="form-group">
                <input type="text" name="news" class="form-control" placeholder="Content">
              </div>
              <input type="submit" class="btn btn-primary">
            </form>

          </div>
        </article>
        <footer>

        </footer>
      </main>
  </body>
</html>
